%nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  / .nav-inner
  .container
    %ul.navbar-text
      / %li= link_to "A Better Hire", root_url, class: "navbar-link #{'active'  if controller.controller_name == 'welcome'}"
      %li= link_to "Job positions", positions_path, class: "navbar-link #{'active' if controller.controller_name == 'positions'}"
    %ul.nav.navbar-text.navbar-right
      - if user_signed_in?
        %li
          %div 
            =link_to "Hello #{current_user.name_display}", edit_user_registration_path , class: "navbar-link"
            =link_to "sign out", destroy_user_session_path, method: :delete, class: "navbar-link-alt"
      - else
        %li 
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .sign-in-navbar
              = f.email_field :email, placeholder: "email"
              = f.password_field :password, placeholder: 'password'
              = f.submit "Sign in", class: "btn btn-default"
