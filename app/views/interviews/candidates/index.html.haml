.spacer25
.container
  %h2 Interviews
  .row
    .col-sm-12.col-md-6
      - @candidates.each do |candidate|
        %ul.list-group
          %li.list-group-item
            = "#{candidate.formatted_name}"
            - if candidate.answers.count > 0 
              = link_to "Continue Interview", interviews_candidate_path(candidate), class: "btn btn-primary btn-xs pull-right"
              .row
                .col-xs-10
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{candidate.interview_progress}", role: "progressbar", style: "width: #{candidate.interview_progress}%"}
                .col-xs-2
                  %h4= "#{candidate.interview_progress}%"
            - else
              = link_to "Start Interview", interviews_candidate_path(candidate), class: "btn btn-primary btn-xs pull-right"
              .spacer25
  =link_to "Create a new interview", new_interviews_candidate_path 
