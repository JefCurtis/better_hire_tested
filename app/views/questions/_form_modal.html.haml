.modal-dialog
  .modal-content
    = semantic_form_for [@position, @question], html: {class: "form-horizontal"} do |f|
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} x
        .full-errors= f.semantic_errors :position
        %h4#myModalLabel.modal-title Edit Question
      .modal-body
        = f.input :title, required: false, input_html: { class: "form-control", rows: "3" }
        %br
      .modal-footer
        = f.action :submit, :as => :button, button_html: { class: "btn btn-primary" }
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close


  