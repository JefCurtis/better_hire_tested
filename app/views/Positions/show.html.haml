.container
  %h2
    = "#{@position.name} template"
  %p
    = @position.description
  %p 
    %h2 Questions to ask:
    - @position.questions.each do |question|
      - question.answers.each do |answer|
        = answer.body
    
      .well
        %p
          = question.title
          = question.answers.first
        //  = answer.body
        = link_to 'Edit question', edit_position_question_path(@position, question), :class => 'btn btn-clear'
        = link_to 'Delete this question', position_question_path(@position, question), :method => :delete, :data => { confirm: "Are you sure?"}, :class => "btn btn-clear"
        = link_to 'Create Answer', new_answer_path(@answer), :class => 'btn btn-primary'

    .row
      %p
        = link_to 'Add a question', new_position_question_path(@position), :class => 'btn btn-clear'
        = link_to 'Edit', edit_position_path(@position), :class => 'btn btn-clear'
        = link_to 'Delete this template', position_path(@position), :method => :delete, :data => { confirm: 'Are you sure you want to delete the template?'}, :class => 'btn btn-clear'
        = link_to 'Back to all', positions_path, :class => 'btn btn-clear'