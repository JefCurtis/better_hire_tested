.container
  %h2
    = "#{@position.name} template"
  %p
    = @position.description
  .well  
    %p Questions to ask:
    %ol 
      - @position.questions.each do |question|
        %li
          = question.title
          = link_to "edit", edit_position_question_path(@position, question)
          = link_to "delete", position_question_path(@position, question), method: :delete, data: { confirm: "Are you sure?"}

    %br
    = link_to "Edit", edit_position_path(@position), class: "btn btn-default"
    = link_to "delete this template", position_path(@position), method: :delete, data: { confirm: 'Are you sure you want to delete the template?'}, class: "btn btn-default"
  = link_to "Add a question", new_position_question_path(@position), class: "btn btn-clear"
  = link_to "Use this template", position_candidates_path(@position), class: "btn btn-default"

  = link_to "Back to all", positions_path, class: "btn btn-default"



