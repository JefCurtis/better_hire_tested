.container    
  -if @position.errors.present?
    %ul
      - @position.errors.full_messages.each do |e|
        %li 
          = e 
  .row
    .form-group.col-xs-4
      = form_for @position do |f|
        = f.label :name
        = f.text_field :name, class: 'form-control'
        %br
        = f.label :description
        = f.text_area :description, class: "form-control"
        %br
        = f.submit