.container    
  -if @position.errors.present?
    %ul.full-errors
      - @position.errors.full_messages.each do |e|
        %li 
          = e 
  .row
    .form-group.col-xs-12.col-md-6
      = form_for @position do |f|
        = f.label :name
        = f.text_field :name, class: 'form-control'
        %br
        = f.label :description
        = f.text_area :description, class: "form-control"
        %br
        .btn-group
          = f.submit class: "button btn btn-primary"
          .button.btn.btn-default=link_to "Cancel", positions_path
          - if @position.persisted?
            .button.btn.btn-default=link_to "Delete", position_path(@position), method: :delete, data: { confirm: "Are you sure you want to delete this position?" }