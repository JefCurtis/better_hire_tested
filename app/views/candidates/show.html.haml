.container
  .spacer25
  .row
    .col-xs-12.col-sm-6.col-md-6
      .well
        = image_tag @candidate.avatar.url(:thumb), class: "image-wrapper"
        %h3.with-border
          = "#{@candidate.first_name} #{@candidate.last_name}"
        - @candidate.positions.each do |position|
          .info-panel.clear-fix
            = "<h4><i class='glyphicon glyphicon-bookmark'></i> #{position}</h4>".html_safe unless position.nil?
        .info-panel.clear-fix
          = "<h4><i class='glyphicon glyphicon-envelope'></i> #{@candidate.email}</h4>".html_safe 
        .info-panel.clear-fix
          = "<h4><i class='glyphicon glyphicon-phone'></i> #{@candidate.phone}</h4>".html_safe 
        .info-panel.clear-fix
          = "<h4><i class='glyphicon glyphicon-map-marker'></i> #{@candidate.address}</h4>".html_safe 
  %p
    = link_to "edit", edit_candidate_path(@candidate), class: "btn btn-default"
    = link_to "delete", candidate_path(@candidate), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
    = link_to "back to all", candidates_path, class: "btn btn-default"
            
