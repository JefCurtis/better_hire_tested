.modal-dialog
  .modal-content
    = semantic_form_for(@candidate) do |f|
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} x
        %h4#myModalLabel.modal-title Candidate
      .modal-body
        = f.semantic_errors :candidate
        = f.input :first_name, required: false, input_html: { class: 'form-control'}
        = f.input :last_name, required: false, input_html: { class: 'form-control'}
        = f.input :avatar, required: false, :label => "Photo", input_html: { class: 'form-control'}
        = f.input :email, as: :email, required: false, input_html: { class: 'form-control'}
        = f.input :address, required: false, input_html: { class: 'form-control', rows: 10, cols: 100}
        = f.input :phone, required: false, input_html: { class: 'form-control'}
        = f.input :notes, input_html: { class: "form-control", rows: 5 }
        %br
      .modal-footer
        .btn-group
          = f.action :submit, as: :button, button_html: { class: "btn btn-primary" }
          - if @candidate.persisted?
            .button.btn.btn-default= link_to "delete", candidate_path(@candidate), method: :delete, data: { confirm: 'Are you sure?' }
          %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
