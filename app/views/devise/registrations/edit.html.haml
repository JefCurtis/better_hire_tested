.sign-up.well-custom.col-xs-12.col-sm-12.col-md-6.col-lg-6
  %h2
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :first_name, ":first name", :autofocus => true, class: '.col-sm-4.control-label'
      .col-sm-8
        = f.text_field :first_name, :placeholder => "first name", class: 'form-control-custom'
    .form-group
      = f.label :last_name, ":last name", class: '.col-sm-4.control-label'
      .col-sm-8
        = f.text_field :last_name, :placeholder => "last name", class: 'form-control-custom'
    .form-group
      = f.label :email, ":email", class: '.col-sm-4.control-label'
      .col-sm-8
        = f.email_field :email, :placeholder => "email", class: 'form-control-custom'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form-group
      = f.label :password, ":password", class: 'control-label.col-sm-4'
      .col-sm-8
        = f.password_field :password, placeholder: "leave blank if you don't want to change it", autocomplete: "off", class: 'form-control-custom'
    .form-group
      = f.label :password_confirmation, ":confirm", class: 'col-sm-4.control-label'
      .col-sm-8
        = f.password_field :password_confirmation, placeholder: "password confirm", class: 'form-control-custom'
    .form-group
      = f.label :current_password, ":current password", class: 'col-sm-4.control-label'
      .col-sm-8
        = f.password_field :current_password, placeholder: "current password to confirm your changes", class: "form-control-custom"
    .form-group
      .submit.col-sm-ofset-4.col-sm-10
        = f.submit "Update", class: 'btn btn-default'
    .form-group
      .col-sm-ofset-4.col-sm-10
        #{button_to "Cancel my account",registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default" } 
      .col-sm-8
        = link_to "Back", :back, class: "btn btn-default"
